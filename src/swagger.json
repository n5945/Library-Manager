{
    "openapi": "3.0.3",
    "info": {
        "title": "Swagger Library Manager - OpenAPI 3.0",
        "description": "Esta é a documentação da API para gerenciamento de uma biblioteca",
        "contact": {
            "email": "nicole.5945@aluno.pr.senac.br"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3333"
        }
    ],
    "tags": [
        {
            "name": "books",
            "description": "Gerenciamento dos livros da biblioteca"
          },
          {
            "name": "loans",
            "description": "Realize empréstimos e devoluções dos livros"
          },
          {
            "name": "users",
            "description": "Operações a respeito do usuário"
          }
    ],
    "paths": {
        "/users": {
            "post": {
                "tags": ["users"],
                "summary": "Cria um novo usuário",
                "description": "Cria um novo usuário passando suas informações básicas",
                "requestBody": {
                    "content": {
                        "apllication/json": {
                            "schema": {
                                "$ref": "#components/schemas/User"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "name": "Nicole",
                                        "email": "nicole@mail.com",
                                        "telefone": "41 1111-1111"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Usuário já cadastrado" 
                    },
                    "200": {
                        "description": "Usuário criado com sucesso!",
                        "content": {
                            "apllication/json": {
                                "schema": {
                                    "type": "object",
                                    "items": {
                                        "$ref": "#components/schemas/User"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "/books": {
        "post": {
            "tags": ["books"],
            "summary": "Cria um novo livro",
            "description": "Cria um novo livro passando suas informações",
            "requestBody": {
                "content": {
                    "apllication/json": {
                        "schema": {
                            "$ref": "#components/schemas/books"
                        },
                        "examples": {
                            "books": {
                                "value": {
                                    "title": "Titulo",
                                    "author": "Nome de Autor",
                                    "category": "Comédia",
                                    "pages": "100",
                                    "publicated": "10_10_2010"
                                }
                            }
                        }
                    }
                }
            },
            "responses": {
                "400": {
                    "description": "Livro já cadastrado" 
                },
                "200": {
                    "description": "Livro criado com sucesso!",
                    "content": {
                        "apllication/json": {
                            "schema": {
                                "type": "object",
                                "items": {
                                    "$ref": "#components/schemas/Book"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "telefone": {
                        "type": "string"
                    }
                }
            },
            "Book": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "author": {
                        "type": "string"
                    },
                    "category": {
                        "type": "string"
                    },
                    "pages": {
                        "type": "string"
                    },
                    "publicated": {
                        "type": "string"
                    }
                }
            }
        }
    }
}